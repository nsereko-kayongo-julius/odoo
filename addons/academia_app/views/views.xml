    <record id="academia_app_view_form" model="ir.ui.view">
            <field name="name">course</field>
            <field name="model">academia_app.course</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="course_code"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Description">
                                <field name="description" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="academia_app.action_window">
      <field name="name">Course details</field>
      <field name="res_model">academia_app.course</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>






