<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_course_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="data">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Course Report</h2>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered" style="table-layout: fixed">
                                    <thead>
                                        <tr>
                                            <th class="text-center" style="width: 30%">Course Name</th>
                                            <th class="text-center" style="width: 20%">Course Code</th>
                                            <th class="text-center" style="width: 50%">Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><span t-out="data.name" /></td>
                                            <td class="text-center"><span t-out="data.course_code" /></td>
                                            <td><span t-out="data.description" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
